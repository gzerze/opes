# vim:ft=plumed
LOAD FILE=../DebyeStructureFactor.cpp

UNITS LENGTH=A

ene: ENERGY
cv: DEBYE_STRUCTURE_FACTOR CUTOFF=10.5 ACTIVE_Q=2.070595 ATOMS1=1-250

METAD ...
  LABEL=metad
  ARG=cv.*
  FILE=Hills.data
  TEMP=350
  PACE=500
  SIGMA=0.0352901/2
  HEIGHT=3
  BIASFACTOR=20
  GRID_MIN=1.3
  GRID_MAX=2.8
  GRID_BIN=200
  CALC_MAX_BIAS
  CALC_RCT
... METAD

PRINT STRIDE=500  FMT=%g FILE=Colvar.data ARG=cv.*,ene,metad.bias,metad.rct,metad.maxbias

ENDPLUMED
